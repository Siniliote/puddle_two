{% extends 'base.html.twig' %}

{% block title %}{% endblock %}
{% block header %}
  {% embed "common/header.html.twig" %}
      {% block masthead_style %}
        {% if post.image is defined %}
          style="background-image: url({{ asset( post.image ) }})"
        {% endif %}
      {% endblock %}
    {% block heading %} {{ post.title }} {% endblock %}
    {% block subheading %} {% if post.subtitle is defined %}{{ post.title }} {% endif %} {% endblock %}
  {% endembed %}
{% endblock %}

{% block body %}
<!-- Post Content-->
<article class="mb-4">
  <div class="container px-4 px-lg-5">
    <div class="row gx-4 gx-lg-5 justify-content-center">
      <div class="col-md-10 col-lg-8 col-xl-7">
        {{ post.body }}
      </div>
    </div>
  </div>
</article>
{% endblock %}
